@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">Bank Accounts</h1>
    
    <div class="mb-3">
        <a asp-page="/Index" asp-page-handler="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Account
        </a>
    </div>
    
    @if (!Model.Accounts.Any())
    {
        <div class="alert alert-info">No accounts found. Create a new account to get started.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Account ID</th>
                        <th>Nickname</th>
                        <th>Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>@account.Id</td>
                            <td>
                                @if (string.IsNullOrEmpty(account.Nickname))
                                {
                                    <span class="text-muted">No nickname</span>
                                }
                                else
                                {
                                    @account.Nickname
                                }
                            </td>
                            <td>@account.Balance.ToString("C")</td>
                            <td>
                                <a asp-page="/Account" asp-route-id="@account.Id" class="btn btn-sm btn-primary">
                                    Manage
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
