@page "{id:int}"
@model AccountModel
@{
    ViewData["Title"] = $"Account {Model.CurrentAccount?.Id}";
}

<div class="container mt-4">
    <h1 class="mb-4">Account Details</h1>
    
    @if (Model.CurrentAccount != null)
    {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Account #@Model.CurrentAccount.Id</h5>
                <span class="badge bg-success">Balance: @Model.CurrentAccount.Balance.ToString("C")</span>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="UpdateNickname" asp-route-id="@Model.CurrentAccount.Id">
                    <div class="mb-3">
                        <label for="nickname" class="form-label">Nickname</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="nickname" asp-for="Nickname" placeholder="Enter a nickname for this account">
                            <button type="submit" class="btn btn-primary">Update Nickname</button>
                        </div>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <form method="post" asp-page-handler="Deposit" asp-route-id="@Model.CurrentAccount.Id">
                            <div class="card">
                                <div class="card-header bg-success text-white">Deposit Funds</div>
                                <div class="card-body">
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" min="0.01" name="amount" class="form-control" placeholder="Amount" required>
                                        <button type="submit" class="btn btn-success">Deposit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    
                    <div class="col-md-6">
                        <form method="post" asp-page-handler="Withdraw" asp-route-id="@Model.CurrentAccount.Id">
                            <div class="card">
                                <div class="card-header bg-warning text-dark">Withdraw Funds</div>
                                <div class="card-body">
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" min="0.01" name="amount" class="form-control" placeholder="Amount" required>
                                        <button type="submit" class="btn btn-warning">Withdraw</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <hr class="my-4">
                
                <h4>Transaction History</h4>
                @if (Model.CurrentAccount.Transactions.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Running Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                // Initialize running balance
                                double runningBalance = 0;
                            }
                            @foreach (var transaction in Model.CurrentAccount.Transactions)
                            {
                                // Update running balance with each transaction
                                runningBalance += transaction.Amount;
                                <tr>
                                    <td>@transaction.Date.ToString("g")</td>
                                    <td>@transaction.Type</td>
                                    <td class="@(transaction.Amount >= 0 ? "text-success" : "text-danger")">
                                        @transaction.Amount.ToString("C")
                                    </td>
                                    <td class="@(runningBalance >= 0 ? "text-success" : "text-danger")">
                                        @runningBalance.ToString("C")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">No transactions found for this account.</div>
                }
            </div>
            <div class="card-footer">
                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.CurrentAccount.Id" 
                      onsubmit="return confirm('Are you sure you want to delete this account? This action cannot be undone.');">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Account
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Account not found</div>
    }
    
    <a asp-page="/Index" class="btn btn-secondary">Back to Accounts</a>
</div>